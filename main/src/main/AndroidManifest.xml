<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="cn.crabapples.main">
    <uses-permission android:name="android.permission.CALL_PHONE"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <application android:allowBackup="true"
                 android:icon="@mipmap/ic_launcher"
                 android:label="@string/app_name"
                 android:roundIcon="@mipmap/ic_launcher_round"
                 android:supportsRtl="true"
                 android:theme="@style/AppTheme">
        <!-- 可注册多个activity,但只有包含 <intent_demo-filter> 标签的activity为程序默认的activity -->
        <activity android:name=".activity.MainActivity" android:label="MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.demo.LiveDemoActivity" android:label="LiveDemoActivity">
            <intent-filter>
                <action android:name="cn.crabapples.liveDemo"/>
<!--                <data android:scheme="crabapples"/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.CheckBoxActivity" android:label="CheckBoxActivity">
            <intent-filter>
                <action android:name="cn.crabapples.checkBoxDemo"/>
                <!--                <data android:scheme="crabapples"/>-->
                <category android:name="android.intent.category.DEFAULT"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.ImageActivity" android:label="ImageActivity"/>
        <activity android:name=".activity.RadioActivity" android:label="RadioActivity"/>
        <activity android:name=".activity.TimePickerActivity" android:label="TimePickerActivity"/>
        <activity android:name=".activity.ProgressBarActivity" android:label="ProgressBarActivity"/>
        <activity android:name=".activity.demo.ChangeUIDemoActivity" android:label="ChangeUIDemoActivity"/>
        <activity android:name=".activity.demo.IntentDemoActivity" android:label="IntentDemoActivity"/>
        <activity android:name=".activity.ButtonActivity" android:label="ButtonActivity"/>
        <activity android:name=".activity.NotificationActivity" android:label="NotificationActivity"/>
        <activity android:name=".activity.demo.HandlerDemoActivity" android:label="HandlerDemoActivity"/>
        <activity android:name=".activity.demo.AlertDialogActivity" android:label="AlertDialogActivity"/>
        <activity android:name=".activity.demo.PopupWindowDemoActivity" android:label="PopupWindowDemoActivity"/>
        <activity android:name=".activity.CallActivity" android:label="CallActivity"/>
        <activity android:name=".activity.LoginActivity" android:label="LoginActivity"/>
        <activity android:name=".activity.demo.SdcardDemoActivity" android:label="SdcardDemoActivity"/>
        <activity android:name=".activity.demo.SharedPreferencesDemoActivity" android:label="SharedPreferencesDemo"/>
        <activity android:name=".activity.demo.XmlDemoActivity" android:label="XmlDemoActivity"/>
        <activity android:name=".activity.demo.JdbcDemoActivity" android:label="JdbcDemoActivity"/>
        <activity android:name=".activity.demo.SqliteDemoActivity" android:label="SqliteDemoActivity"/>
        <activity android:name=".activity.demo.SqliteDemo1Activity" android:label="SqliteDemo1Activity"/>
        <activity android:name=".activity.demo.ListViewDemoActivity" android:label="ListViewDemoActivity"/>
        <activity android:name=".activity.demo.ListViewDemo1Activity" android:label="ListViewDemo1Activity"/>
        <activity android:name=".activity.demo.CodeReadDemoActivity" android:label="CodeReadDemoActivity"/>
        <activity android:name=".activity.demo.DownloadDemoActivity" android:label="DownloadDemoActivity"/>
    </application>

</manifest>