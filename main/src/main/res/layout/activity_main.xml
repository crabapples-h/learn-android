<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".activity.MainActivity">
		<androidx.appcompat.widget.Toolbar android:layout_width="match_parent"
		                                   android:layout_height="?attr/actionBarSize"
		                                   android:background="#6B9853"
		                                   app:navigationIcon="@drawable/left"
		                                   android:onClick="back"
		                                   android:id="@+id/toolBar">
				<TextView android:layout_width="wrap_content"
				          android:layout_height="match_parent"
				          android:text="Hello World!"
				          android:layout_gravity="center"
				          android:gravity="center"/>
		</androidx.appcompat.widget.Toolbar>
		<ScrollView android:layout_width="match_parent"
		            android:layout_height="wrap_content">
				<LinearLayout android:layout_width="match_parent"
				              android:layout_height="wrap_content"
				              android:orientation="vertical">

						<androidx.appcompat.widget.Toolbar
									android:layout_width="match_parent"
									android:layout_height="?attr/actionBarSize"
									android:background="#86E8E2"
									app:title="标题"
									app:subtitle="子标题"
									app:titleMarginStart="90dp"
									app:navigationIcon="@drawable/left"
									app:titleTextColor="#ff0000"
									android:onClick="back"/>
						<TextView android:layout_width="match_parent"
						          android:layout_height="wrap_content"
						          android:text="Hello World!"
						          android:id="@+id/text"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="下载测试"
						        android:onClick="toDownload"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="查看网页源码"
						        android:onClick="toCodeRead"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="列表演示1"
						        android:onClick="toListViewDemo1"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="列表演示2"
						        android:onClick="toListViewDemo"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Sqlite演示1"
						        android:onClick="toSqliteDemo1"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Sqlite演示2"
						        android:onClick="toSqliteDemo"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Jdbc演示"
						        android:onClick="toJdbcDemo"/>
						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Xml演示"
						        android:onClick="toXmlDemo"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="To Share Preferences"
						        android:onClick="Preference演示"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Sd卡演示"
						        android:onClick="toSdcard"/>
						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="登录页面演示"
						        android:onClick="toLogin"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="拨号演示"
						        android:onClick="toCall"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Popup气泡弹窗演示"
						        android:onClick="toPopupWindow"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Dialog弹窗演示"
						        android:onClick="toDialog"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="To Handler"
						        android:onClick="toHandler"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="通知测试"
						        android:onClick="toNotice"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="按钮演示"
						        android:onClick="toButton"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Intent意图演示"
						        android:onClick="intentDemo"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="修改界面ui演示"
						        android:onClick="toChangeUI"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="时间日期演示"
						        android:onClick="toTimePicker"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Radio单选框演示"
						        android:onClick="toRadio"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Progress Bar进度条演示"
						        android:onClick="toProgressBar"/>
						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="image图片演示"
						        android:onClick="toImage"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="CheckBox复选框演示"
						        android:onClick="toCheckBox"/>

						<Button android:layout_width="match_parent"
						        android:layout_height="wrap_content"
						        android:textAlignment="viewStart"
						        android:text="Active生命周期演示"
						        android:onClick="toLiveDemo"/>
				</LinearLayout>
		</ScrollView>
</LinearLayout>
